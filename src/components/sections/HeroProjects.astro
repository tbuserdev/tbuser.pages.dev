---
const { project } = Astro.props;
const date = new Date(project.date);

import ProjectStatus from "../ProjectStatus.astro";
---

<section class="space-y-6 py-12">
  <div>
    <h1 class="text-3xl text-primary">
      {project.title}
    </h1>
    <h2 class="text-3xl text-secondary">
      {date.toLocaleDateString("de-DE", { year: "numeric", month: "long" })}
    </h2>
  </div>
  <div class="flex flex-wrap gap-2">
    <ProjectStatus status={project.status} />

    <a
      class="inline-flex items-center rounded border border-secondary bg-secondaryLight px-2.5 py-0.5 text-xs font-medium text-primary"
      href={project.github}
    >
      zum GitHub Repository
      <svg
        class="ms-1.5 h-2.5 w-2.5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        fill="none"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"
        ></path>
      </svg>
    </a>
    {
      project.link && (
        <a
          class="inline-flex items-center rounded border border-secondary bg-secondaryLight px-2.5 py-0.5 text-xs font-medium text-primary"
          href={project.link}
        >
          zur Live Demo
          <svg
            class="ms-1.5 h-2.5 w-2.5"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="none"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"
            />
          </svg>
        </a>
      )
    }
  </div>
</section>
