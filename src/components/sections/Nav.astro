---
import { Image } from "astro:assets";
import pb from "../../assets/lorelei_pb.png";
---

<nav class="flex items-center justify-between pt-12">
  <a
    class="flex items-center space-x-4"
    href="/"
    aria-label="Link back to the Homepage"
  >
    <Image
      src={pb}
      quality="mid"
      alt="Profile Logo"
      class="object-fit aspect-square w-12 rounded-full"
    />
    <div>
      <p class="text-skin-primary font-medium text-primary">Tim Buser</p>
      <p class="text-skin-secondary font-light text-secondary">
        Junior Developer
      </p>
    </div>
  </a>
  <div class="flex space-x-2">
    <button
      id="theme-toggle"
      class="flex aspect-square h-8 w-8 items-center rounded-md border-0.5 border-secondary p-1.5 opacity-50 transition-all duration-300 hover:bg-secondaryLight hover:opacity-60"
    >
      <div class="flex h-full w-full items-center justify-center">
        <svg
          class="h-full w-full text-secondary"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 20"
        >
          <path
            stroke="var(--color-secondary)"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M4 7a3 3 0 0 1 3-3M5 19h4m0-3c0-4.1 4-4.9 4-9A6 6 0 1 0 1 7c0 4 4 5 4 9h4Z"
          ></path>
        </svg>
      </div>
    </button>
    <a
      class="flex aspect-square h-8 w-8 items-center rounded-md border-0.5 border-secondary p-1.5 opacity-50 transition-all duration-300 hover:bg-secondaryLight hover:opacity-60"
      href="https://github.com/tbuserdev"
      aria-label="Link to Github"
    >
      <div class="flex h-full w-full items-center justify-center">
        <svg
          class="h-full w-full fill-secondary"
          viewBox="0 0 100 100"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"
          ></path>
        </svg>
      </div>
    </a>
  </div>
</nav>

<script defer>
  const toggle = document.querySelector("#theme-toggle");
  const root = document.documentElement;

  toggle.addEventListener("click", () => {
    const currentTheme = root.getAttribute("data-theme");
    const nextTheme = currentTheme === "light" ? "dark" : "light";
    root.setAttribute("data-theme", nextTheme);
    localStorage.setItem("theme", nextTheme);

    if (nextTheme === "dark") {
      root.classList.add("dark");
    } else {
      root.classList.remove("dark");
    }
  });
</script>
